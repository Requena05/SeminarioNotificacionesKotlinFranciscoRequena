<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio3Activity3">
    <TextView
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/Morado"
        android:text="PM_notificaciones"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|start"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cabecera"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:background="#EDE7F6"
       android:layout_margin="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Titulo notificaciÃ³n"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:background="#EDE7F6"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Texto de la notificacion"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/seleccionartodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:background="#EDE7F6"
        android:orientation="vertical"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seleccionaricono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona un icono"
            android:padding="10dp"
            android:elevation="10dp"
            >
            <Spinner
                android:id="@+id/seleccionaricono2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/seleccionarimagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona un icono"
            android:elevation="10dp"
            >
            <Spinner
                android:id="@+id/seleccionarimagen2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:hint="Selecciona cuantos botones quieres"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mas"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/Morado"
                android:elevation="10dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toStartOf="@id/contadornotis"
                />
            <TextView
                android:id="@+id/contadornotis"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="0"
                app:layout_constraintStart_toEndOf="@id/mas"
                app:layout_constraintEnd_toStartOf="@id/menos"
                app:layout_constraintTop_toTopOf="@id/mas"
                android:gravity="center"
                android:textSize="40dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menos"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@color/Morado"
                android:elevation="10dp"
                android:layout_margin="10dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toEndOf="@id/contadornotis"
                app:layout_constraintTop_toTopOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>